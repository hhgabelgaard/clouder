define command {
    command_name    clouder-notify-host-by-email
    command_line    /usr/bin/printf "%b" "From: shinken@clouder-consulting.net\nSubject: Host $HOSTSTATE$ alert for $HOSTNAME$\n\nShinken Notification\n\nType:$NOTIFICATIONTYPE$\nHost: $HOSTNAME$\nState: $HOSTSTATE$\nAddress: $HOSTADDRESS$\nInfo: $HOSTOUTPUT$\nDate/Time: $DATE$ $TIME$\n" | /usr/sbin/ssmtp $CONTACTEMAIL$
}

define command {
    command_name    clouder-notify-service-by-email
    command_line    /usr/bin/printf "%b" "From: shinken@clouder-consulting.net\nSubject: ** $NOTIFICATIONTYPE$ alert - $HOSTNAME$/$SERVICEDESC$ is $SERVICESTATE$ **\n\nShinken Notification\n\nNotification Type: $NOTIFICATIONTYPE$\n\nService: $SERVICEDESC$\nHost: $HOSTNAME$\nAddress: $HOSTADDRESS$\nState: $SERVICESTATE$\n\nDate/Time: $DATE$ $TIME$\nAdditional Info : $SERVICEOUTPUT$\n" | /usr/sbin/ssmtp $CONTACTEMAIL$
}


define notificationway{
       notificationway_name            clouder-email
       service_notification_period     24x7
       host_notification_period        24x7
       service_notification_options    c,w,r
       host_notification_options       d,u,r,f,s
       service_notification_commands   clouder-notify-service-by-email ; send service notifications via email
       host_notification_commands      clouder-notify-host-by-email    ; send host notifications via email
}


define contactgroup{
    contactgroup_name   clouder-admins
    alias               clouder-admins
    members             clouder-sysadmin
}

define contact{
    use             generic-contact
    contact_name    clouder-sysadmin
    email           SYSADMIN_MAIL
    is_admin        1
    notificationways    clouder-email
}


define host{
   name                         clouder-linux-server
